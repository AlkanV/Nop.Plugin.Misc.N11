                        </div>

                        <div class="form-group">
                            <div class="col-md-3">
                                <nop-label asp-for="DefaultBrandName" />
                            </div>
                            <div class="col-md-9">
                                <nop-editor asp-for="DefaultBrandName" />
                                <span asp-validation-for="DefaultBrandName"></span>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-3">
                                <nop-label asp-for="BrandIdMapping" />
                            </div>
                            <div class="col-md-9">
                                <nop-editor asp-for="BrandIdMapping" />
                                <span asp-validation-for="BrandIdMapping"></span>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-9 col-md-offset-3">
                                <input type="submit" name="save" class="btn bg-blue" value="@T("Admin.Common.Save")" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>